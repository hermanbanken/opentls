{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*",
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "typings/index",
        "typings/index.d.ts"
    ]
}