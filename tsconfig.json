{
    "version": "2.0.3",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "build",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types/", 
            "node_modules/moment/"
        ],
        "types": [
            "node",
            "moment",
            "moment-timezone",
            "whatwg-fetch"
        ]
    },
    "include": [
        "node_modules/moment",
        "src/**/*",
        "src/*",
        "test/**/*",
        "test/*"
    ]
}